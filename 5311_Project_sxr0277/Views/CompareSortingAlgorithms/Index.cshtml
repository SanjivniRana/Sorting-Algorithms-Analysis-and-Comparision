@using _5311_Project_sxr0277.Models
@using System.Web.Helpers;
@model CompareAlgoInput

<h3>SORTING ALGORITHMS COMPARISON</h3>

<div class="container">

    @using (Html.BeginForm("Index", "CompareSortingAlgorithms", FormMethod.Post))
    {
        <form>
            <div class="container-fluid">
                <div class="form-group">
                    <div class="col-12">
                        <label>Enter the input size:</label>
                        @Html.TextBoxFor(m => m.inputSize, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.inputSize, "Please enter the input size", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-12">
                        <label>Enter the input string: (Please enter comma seperated input values)</label>
                        @Html.TextBoxFor(m => m.input, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <label>Select Sorting Algorithms to compare:</label>
                <div class="form-group">
                    <div class="row" style="margin-left:2px;">
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isBubble, new { @class = "form-control" })
                            <label class="form-check-label">Bubble Sort</label>
                            @Html.ValidationMessageFor(m => m.isBubble, "Enter one or more sorting algorithms below", new { @class = "text-danger" })
                        </div>
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isSelection, new { @class = "form-control" })
                            <label class="form-check-label">Selection Sort</label>
                        </div>
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isInsertion, new { @class = "form-control" })
                            <label class="form-check-label">Insertion Sort</label>
                        </div>
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isHeap, new { @class = "form-control" })
                            <label class="form-check-label">Heap Sort</label>
                        </div>
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isMerge, new { @class = "form-control" })
                            <label class="form-check-label">Merge Sort</label>
                        </div>
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isQuickPivot, new { @class = "form-control" })
                            <label class="form-check-label">Quick Sort (Pivot)</label>
                        </div>
                        <div class="col-3">
                            @Html.CheckBoxFor(m => m.isQuickMedian, new { @class = "form-control" })
                            <label class="form-check-label">Quick Sort (Median)</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row" style="display:flex;margin-left:2px;">
                    <div class="col-3">
                        <button class="btn btn-primary" style="margin-left:5px;" type="submit" value="Submit">Submit</button>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-primary" style="margin-left:5px;color:white;">@Html.ActionLink("Reset", "Index", "CompareSortingAlgorithms", new { area = "" }, null)</button>
                    </div>
                </div>
                <br />
            </div>
        </form>
    }


    @if (Model.sortedArray1 != null || Model.sortedArray2 != null || Model.sortedArray3 != null || Model.sortedArray4 != null || Model.sortedArray5 != null || Model.sortedArray6 != null || Model.sortedArray7 != null)
    {
        <div class="resultrep">
            <h2>Comparing All Algorithms</h2>
            <br />
            <div class="row">
                <div class="col-6">
                    <img src="@Url.Action("ComparisionChart")" alt="" />
                </div>
            </div>
        </div>
    }

    @if (Model.sortedArray1 != null)
    {
        <div class="resultrep">
            <h2>Bubble Sort</h2>
            <div class="row">
                <div class="col-12">
                    <label class="resultcol">Result:</label>
                    @Html.DisplayFor(model => model.sortedArray1)
                </div>
            </div>
            <br />
            <label class="labeldesign">Execution time(in seconds): @Html.DisplayFor(model => model.executionTimeBubble)</label>
            <br />
            <div class="row">
                <div class="col-6">
                    <img src="@Url.Action("BubbleChart")" alt="" />
                </div>
            </div>
        </div>
    }

    @if (Model.sortedArray2 != null)
    {
        <div class="resultrep">
            <h2>Selection Sort</h2>
            <div class="row">
                <div class="col-12">
