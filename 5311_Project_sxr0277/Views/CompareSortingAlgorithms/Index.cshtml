            </div>
        </div>
    }

    @if (Model.sortedArray7 != null)
    {
        <div class="resultrep">
            <h2>Quick Sort Using Median</h2>
            <div class="row">
                <div class="col-12">
                    <label class="resultcol">Result:</label>
                    @Html.DisplayFor(model => model.sortedArray7)
                </div>
            </div>
            <br />
            <label class="labeldesign">Execution time(in seconds):@Html.DisplayFor(model => model.executionTimeQuickMedian)</label>
            <br />
            <div class="row">
                <div class="col-6">
                    <img src="@Url.Action("QuickMedianChart")" alt="" />
                </div>
            </div>
        </div>
    }

</div>

