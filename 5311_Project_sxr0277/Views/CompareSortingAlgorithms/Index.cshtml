            <br />
            <label class="labeldesign">Execution time(in seconds): @Html.DisplayFor(model => model.executionTimeHeap)</label>
            <br />
            <div class="row">
                <div class="col-6">
                    <img src="@Url.Action("HeapChart")" alt="" />
                </div>
            </div>
        </div>
    }

    @if (Model.sortedArray5 != null)
    {
        <div class="resultrep">
            <h2>Merge Sort</h2>
            <div class="row">
                <div class="col-12">
                    <label class="resultcol">Result:</label>
                    @Html.DisplayFor(model => model.sortedArray5)
                </div>
            </div>
            <br />
            <label class="labeldesign">Execution time(in seconds): @Html.DisplayFor(model => model.executionTimeMerge)</label>
            <br />
            <div class="row">
                <div class="col-6">
                    <img src="@Url.Action("MergeChart")" alt="" />
                </div>
            </div>
        </div>
    }

    @if (Model.sortedArray6 != null)
    {
        <div class="resultrep">
            <h2>Quick Sort Using Pivot</h2>
            <div class="row">
                <div class="col-12">
                    <label class="resultcol">Pivot Used(last element):</label>
                    @Html.DisplayFor(model => model.pivotUsed)
                </div>
                <div class="col-12">
                    <label class="resultcol">Result:</label>
                    @Html.DisplayFor(model => model.sortedArray6)
