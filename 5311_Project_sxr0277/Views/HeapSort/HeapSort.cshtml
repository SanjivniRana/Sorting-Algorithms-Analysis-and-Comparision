
@using _5311_Project_sxr0277.Models
@using System.Web.Helpers
@model HeapSortModel

<div class="container">

    <h2>Heap Sort</h2>

    @using (Html.BeginForm("HeapSort", "HeapSort", FormMethod.Post))
    {
        <div class="container-fluid">
            <div class="form-group">
                <div class="col-12">
                    <label>Enter the input size:</label>
                    @Html.TextBoxFor(m => m.HeapInputSize, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.HeapInputSize, "Please enter the input size", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-12">
                    <label>Enter the input string: (Please enter comma seperated input values)</label>
                    @Html.TextBoxFor(m => m.HeapInput, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.HeapInput, "Please enter the input values", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="buttonrow" style="display:flex;">
                <div class="col-3">
                    <button class="btn btn-primary" style="margin-left:5px;" type="submit" value="Submit">Submit</button>
                </div>
                <div class="col-3">
                    <button class="btn btn-primary" style="margin-left:5px;">@Html.ActionLink("Reset", "HeapSort", "HeapSort", new { area = "" }, null)</button>
                </div>
            </div>
            <br />
        </div>
    }

    @if (Model.HeapSortedArray != null)
    {
        <div>
            <div class="row">
                <div class="col-12">
                    <label class="resultcol2">Result:</label>
                    @Html.DisplayFor(model => model.HeapSortedArray)
                </div>
            </div>
            <br />
            <label class="labeldesign2">Execution time(in seconds): @Html.DisplayFor(model => model.HeapTime)</label>
            <br />
            <div class="row">
                <div class="col-6">
                    <img src="@Url.Action("HeapSortChart")" alt="" />
                </div>
            </div>
        </div>
    }
</div>

<style>
    a {
        color: #ffffff !important;    
    }
    h2 {
        margin-bottom: 40px;
        margin-left: 15px;
    }
    .form-control {
        width:auto;
    }
    buttonrow {
        margin-left: 5px;    
    }
    .labeldesign2 {
        float: right;
        margin-right: 240px;
        margin-top: 85px;
    }
    .resultcol2 {
        margin-left: 35px;
        margin-top: 20px;
    }
</style>
